<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gvtechsolution.fooddeliveryathome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".activities.user.RegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.business.BusinessRegistrationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.user.FilterByFoodItemActivity"
            android:theme="@style/AppTheme.MyAppTheme" />
        <activity android:name=".activities.user.ChangeLocationActivity" />
        <activity
            android:name=".activities.user.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.user.RestaurantHomeActivity" />
        <activity
            android:name=".activities.user.FoodItemDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.user.EditAddressActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.user.CartActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>