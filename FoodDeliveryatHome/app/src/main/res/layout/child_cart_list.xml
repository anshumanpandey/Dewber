<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <TextView
            android:id="@+id/child_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mutton Biriyani"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorTextEdit"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/child_cart_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR 325"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorTextEdit"
            android:layout_alignParentRight="true"
            />
        <View
            android:id="@+id/first_view_child_cart"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/child_cart_item_name"
            android:background="@color/recyclerIconBg"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </RelativeLayout>
</LinearLayout>