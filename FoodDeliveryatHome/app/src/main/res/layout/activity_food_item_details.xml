<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.user.FoodItemDetailsActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <Button
        android:id="@+id/item_details_close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mutton Biriyani"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextEdit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All time favourite,our Kolkata speciality,served with rice and raita"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/searchText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorTextEdit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select any one option"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textColor="@color/searchText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/radiobutton_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Half"
                    android:textSize="18dp" />
                <RadioButton
                    android:id="@+id/radiobutton_quantity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Full"
                    android:textSize="18dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 150" />

            <TextView
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:text="INR 220"
                android:layout_marginTop="18dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>