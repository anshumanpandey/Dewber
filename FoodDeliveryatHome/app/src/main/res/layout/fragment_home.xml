<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2.5dp"
        android:paddingRight="2.5dp"
        android:orientation="vertical"
        android:nestedScrollingEnabled="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:orientation="vertical"
            tools:context=".activities.HomeActivity">
            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/home_user_location_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="YOUR LOCATION"
                    android:textColor="@color/searchText"
                    android:textSize="12dp"
                    android:drawableStart="@drawable/ic_room_black_24dp"
                    android:drawableLeft="@drawable/ic_room_black_24dp"
                    android:drawablePadding="7dp"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/home_user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_editlocation"
                        android:lines="1"
                        android:hint="Salt Lake Sector V,Salt Lake City"
                        android:inputType="text"
                        android:textSize="18dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/searchText"
                        android:textColorHint="@color/searchText"
                        android:textStyle="normal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="4dp"
                        />
                    <Button
                        android:id="@+id/home_screen_change_button"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="change"
                        android:textSize="10dp"
                        android:textColor="@color/colorTextView"
                        android:background="@drawable/rounded_change_button"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/home_screen_banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/slider_image"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:layout_below="@+id/top"
                >

                <EditText
                    android:id="@+id/home_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/rounded_search_edittext"
                    android:drawableStart="@drawable/search"
                    android:drawableLeft="@drawable/search"
                    android:drawablePadding="7dp"
                    android:ems="10"
                    android:hint="Search for resturants,dishes.."
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/colorTextEdit"
                    android:textColorHint="@color/colorTextEdit"
                    android:textStyle="normal"
                   />
                <TextView
                    android:id="@+id/popular_dishes_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Dishes"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_popular_dishes_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/popular_resturants_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Resturants"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_popular_restaurant_recyclerview"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"
                   >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>