<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FeedbackFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:padding="8dp"
        >
    <Button
        android:id="@+id/feedback_close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_close"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/feedback_restaurant_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
            android:layout_below="@+id/feedback_close_button"
        android:scaleType="centerCrop"
        android:src="@drawable/mutton_biryani"
        app:riv_corner_radius="10dp" />

        <TextView
            android:id="@+id/feedback_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/feedback_close_button"
            android:layout_toRightOf="@id/feedback_restaurant_image"
            android:text="The Biriyani INC"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/colorTextEdit"/>

        <TextView
            android:id="@+id/feedback_restaurant_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/feedback_restaurant_image"
            android:layout_below="@+id/feedback_restaurant_name"
            android:text="Salt Lake, Sector v"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            />
        <View
            android:id="@+id/feedback_view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/recyclerIconBg"
            android:layout_marginTop="8dp"
            android:layout_below="@id/feedback_restaurant_image"/>
        <TextView
            android:id="@+id/feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please rate the food !!"
            android:layout_below="@id/feedback_view1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/feedback_text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your feedback will make people better choice"
            android:layout_below="@id/feedback_text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feedback_text_description"
            android:rating="4.5"/>

  </RelativeLayout>

</FrameLayout>