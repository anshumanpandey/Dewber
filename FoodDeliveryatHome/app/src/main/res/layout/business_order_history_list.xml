<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="2dp"
            android:layout_margin="4dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/business_order_history_restaurant_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mutton_biryani"
                app:riv_corner_radius="10dp" />
            <TextView
                android:id="@+id/business_order_history_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Order No: 1941"
                android:layout_toRightOf="@+id/business_order_history_restaurant_image"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextEdit"
              />
            <TextView
                android:id="@+id/business_order_history_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:text="210 $"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextEdit"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/business_order_history_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="pending"
                android:drawableStart="@drawable/ic_order_status"
                android:drawableLeft="@drawable/ic_order_status"
                android:drawablePadding="7dp"
                android:layout_toRightOf="@+id/business_order_history_restaurant_image"
                android:layout_below="@+id/business_order_history_order_price"
               android:paddingTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent"
                android:autoLink="web"
                android:clickable="true"/>
            <TextView
                android:id="@+id/business_order_history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/business_order_history_order_price"
                android:paddingTop="10dp"
                android:layout_alignParentRight="true"
                android:text="16:45"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="7dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorTextEdit"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>