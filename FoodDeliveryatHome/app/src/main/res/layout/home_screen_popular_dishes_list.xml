<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/popular_dishes_image"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:src="@drawable/mutton_biryani"
                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/popular_dishes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_dishes_image"
                android:textSize="18sp"
                android:text="Mutton Biriyani"
                android:textColor="@color/colorTextEdit"

                />
            <TextView
                android:id="@+id/popular_dishes_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_dishes_title"
                android:text="INR-100"
                android:layout_marginTop="2dp"

                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                />

            <TextView
                android:id="@+id/popular_dishes_deliverytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_dishes_title"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/popular_dishes_price"
                android:text="20-30 MINS"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                />
            <TextView
                android:id="@+id/popular_dishes_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_dishes_price"
                android:text="Arsalan,Chinar Park"
                android:textAppearance="@style/Base.TextAppearance.AppCompat" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>