<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/special_menu_dish_image"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foodcategory"
        app:riv_corner_radius="10dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/special_menu_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/special_menu_dish_image"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:text="Egg Biriyani"
        android:textColor="@color/colorTextEdit"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/special_menu_dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/special_menu_dish_image"
        android:layout_below="@id/special_menu_dish_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:text="served with rice and raita"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/special_menu_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/special_menu_dish_image"
        android:layout_below="@+id/special_menu_dish_description"
        android:text="$20"
        android:layout_marginLeft="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        />
    <Button
        android:id="@+id/special_menu_add_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/special_menu_dish_image"
        android:layout_below="@+id/special_menu_dish_price"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_register_button"
        android:text="Add Item +"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorTextView"
        />
</RelativeLayout>