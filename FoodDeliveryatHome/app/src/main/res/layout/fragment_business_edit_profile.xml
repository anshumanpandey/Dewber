<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BusinessEditProfileFragment">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.ProfileActivity"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/user_icon"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#333333"
                app:riv_oval="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upload Image"
                android:drawableStart="@drawable/ic_camera"
                android:drawableLeft="@drawable/ic_camera"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Personal Details"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorTextView"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/transparentGrey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/email"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Business Name"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/username"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/username"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/username"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telephone"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/telephone"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/telephone"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Address Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorTextView"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/transparentGrey"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Address"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/email"

                    />
                <Button
                    android:id="@+id/business_update_profile_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Update"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/rounded_register_button"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>