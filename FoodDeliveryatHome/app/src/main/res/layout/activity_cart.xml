<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:nestedScrollingEnabled="true"
tools:context=".activities.user.CartActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp">
        <Button
            android:id="@+id/cart_close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_arrow_back"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/parent_cart_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.CardView
            android:id="@+id/cart_second_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            >
            <TextView
                android:id="@+id/cart_add_more_item_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add More Items"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_add"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:padding="6dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cart_third_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <TextView
                    android:id="@+id/cart_grand_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grand Total"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextEdit"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/cart_grand_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR 800"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorTextEdit"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cart_fourth_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <TextView
                    android:id="@+id/cart_delivery_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Delivery Address"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                <TextView
                    android:id="@+id/cart_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cart_delivery_address_text"
                    android:text="Highland Woods,Rajarhat..."
                    android:textColor="@color/colorTextEdit"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/cart_location_change_button"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/cart_delivery_address_text"
                    android:text="change"
                    android:textSize="10dp"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/rounded_change_button"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cart_fifth_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
                <TextView
                    android:id="@+id/cart_payment_mode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASH"
                    android:layout_below="@+id/cart_payment_mode_text"
                    android:drawableLeft="@drawable/ic_payment"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/ic_payment"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextEdit"
                    />
                <Button
                    android:id="@+id/cart_payment_mode_change_button"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/cart_payment_mode_text"
                    android:text="change"
                    android:textSize="10dp"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/rounded_change_button"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom">
            <Button
                android:id="@+id/proceed_pay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to pay"
                android:textSize="17dp"
                android:textColor="@color/colorTextView"
                android:background="@color/colorAccent"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
