<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/restaurant_cart_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mutton_biryani"
                    app:riv_corner_radius="10dp" />

                <TextView
                    android:id="@+id/cart_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/restaurant_cart_image"
                    android:text="The Biriyani INC"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextEdit"/>

                <TextView
                    android:id="@+id/cart_restaurant_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/restaurant_cart_image"
                    android:layout_below="@+id/cart_restaurant_name"
                    android:text="Salt Lake, Sector v"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/recyclerIconBg"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:layout_weight="0.7"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextEdit"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Item Price"
                    android:layout_weight="0.3"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextEdit"
                    android:textStyle="bold"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/child_cart_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add More Items"
                    android:drawableLeft="@drawable/ic_add"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/ic_add"
                    android:textColor="@color/colorTextEdit"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/recyclerIconBg"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="cooking Instructions..e.g.less spicy"
                    android:layout_marginTop="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Apply Voucher Code"
                    android:drawableLeft="@drawable/rounded_register_button"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/rounded_register_button"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/recyclerIconBg"
                    android:layout_marginTop="8dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cart_food_item_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SubTotal"
                        android:textColor="@color/colorTextEdit"
                        android:layout_alignParentLeft="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_subtotal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR 150"
                        android:textColor="@color/colorTextEdit"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tax"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_subtotal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_tax_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR 21"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_subtotal_amount"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_delivery_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Charge"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_tax"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_delivery_charge_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR 10"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_tax_amount"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                    <TextView
                        android:id="@+id/cart_food_item_grand_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grand Subtotal"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_delivery_charge"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/cart_food_item_grand_subtotal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR 500"
                        android:textColor="@color/colorTextEdit"
                        android:layout_below="@+id/cart_food_item_delivery_charge_amount"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>