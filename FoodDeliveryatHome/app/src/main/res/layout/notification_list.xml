<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >
            <RelativeLayout
                android:id="@+id/content_notification_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >
                <TextView
                    android:id="@+id/notification_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="notification datetime"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextEdit"/>
                <TextView
                    android:id="@+id/notification_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/notification_datetime"
                    android:text="notification datetime"
                    android:textColor="@color/colorTextView"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:id="@+id/notification_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/notification_datetime"
                    android:layout_below="@+id/notification_category"
                    android:text=" notification description"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextEdit"
                    />
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>