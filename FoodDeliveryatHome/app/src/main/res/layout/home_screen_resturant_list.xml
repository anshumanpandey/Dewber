<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/popular_resturant_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/foodcategory"
                app:riv_corner_radius="10dp"
                android:padding="4dp"
                />
            <TextView
                android:id="@+id/popular_resturant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/popular_resturant_image"
                android:textSize="20sp"
                android:text="XII ZODIAC"
                android:textColor="@color/colorTextEdit"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/popular_resturant_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_resturant_title"
                android:text="Chinese,Noodles"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/popular_resturant_image"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                />

            <TextView
                android:id="@+id/popular_resturant_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_resturant_cuisine"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/popular_resturant_image"
                android:text="INR 200"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                />
            <RatingBar
                android:id="@+id/popular_resturant_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_resturant_price"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/popular_resturant_image"
                android:rating="3.5"
                style="@style/Widget.AppCompat.RatingBar.Small"/>
            <TextView
                android:id="@+id/popular_resturant_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular_resturant_price"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/popular_resturant_rating"
                android:text="20-30 Mins"
                android:textAppearance="@style/Base.TextAppearance.AppCompat"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>