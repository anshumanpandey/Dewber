<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/view_special_menu_image"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.3"
                android:src="@drawable/foodcategory"
                app:riv_corner_radius="10dp"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:layout_margin="5dp"
                android:padding="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/view_special_menu_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Egg Biriyani"
                        android:textColor="@color/colorTextEdit"
                        android:textStyle="bold"
                        />
                    <Button
                        android:id="@+id/view_special_menu_delete_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_delete"
                        android:textSize="15dp"
                        android:layout_alignParentRight="true"
                        />
                    <TextView
                        android:id="@+id/view_special_menu_item_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_special_menu_item_name"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat"
                        android:text="served with rice and raita"

                        />
                    <TextView
                        android:id="@+id/view_special_menu_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_special_menu_item_description"
                        android:text="$30"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat"
                        />

                    <Button
                        android:id="@+id/view_special_menu_item_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/view_special_menu_item_price"
                        android:text="Edit Item"
                        android:textSize="10dp"
                        android:textColor="@color/colorTextView"
                        android:background="@drawable/rounded_change_button"

                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>