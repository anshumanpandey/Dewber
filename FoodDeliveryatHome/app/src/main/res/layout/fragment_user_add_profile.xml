<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserAddProfileFragment">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.ProfileActivity"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_add_profile_imageView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#333333"
                app:riv_oval="true" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Personal Details"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorTextView"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/transparentGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="moumita123@gmail.com"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/email"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moumita"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/username"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biswas"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/username"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9830235674"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/telephone"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/telephone"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Address Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorTextView"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/transparentGrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akansha More,Newtown,Kolkata"
                    android:padding="8dp"
                    android:inputType="text"
                    android:textColorHint="@color/colorTextEdit"
                    android:textColor="@color/colorTextEdit"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="7dp"
                    android:drawableStart="@drawable/email"
                    />
                <Button
                    android:id="@+id/user_add_profile_edit_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Edit"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorTextView"
                    android:background="@drawable/rounded_register_button"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</FrameLayout>